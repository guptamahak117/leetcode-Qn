class Solution {
public:
    static string removeDuplicates(string s) {  // make it static
        bool found = true;
        while (found) {
            found = false;
            for (int i = 0; i< s.length(); i++) {
                if ( s[i] == s[i + 1]) {
                    s.erase(i, 2);
                    found = true;
                    break; // restart after removal
                }
            }
        }
        return s;
    }
};

